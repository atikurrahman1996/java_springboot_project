<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    
    <bean id="coder1" class="com.example.demo.model.Coder">
		
		<constructor-arg index="0" value="101"></constructor-arg>
		<constructor-arg index="1" value="Atik"></constructor-arg>
		<constructor-arg index="2" value="Java"></constructor-arg>
		<constructor-arg index="3" ref="computer1"></constructor-arg>
        
    </bean>

    <bean id="computer1" class="com.example.demo.model.Computer">
		
		<constructor-arg index="0" value="AMD"></constructor-arg>
       
    </bean>

</beans>